{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "style": "emphasis",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "size": "large",
                                    "weight": "bolder",
                                    "text": "**Aprovação de Release**"
                                }
                            ],
                            "width": "stretch"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "data:image/png;base64,",
                                    "altText": "Pendente",
                                    "height": "30px"
                                }
                            ],
                            "width": "auto"
                        }
                    ]
                }
            ],
            "bleed": true
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "size": "ExtraLarge",
                                    "text": "${project}",
                                    "wrap": true
                                },
                                {
                                    "type": "TextBlock",
                                    "spacing": "Small",
                                    "size": "Small",
                                    "weight": "Bolder",
                                    "color": "Accent",
                                    "text": "[Release Notes: ${ref}](${releasenotes})"
                                }
                            ],
                            "width": "stretch"
                        }
                    ]
                },
                {
                    "type": "FactSet",
                    "spacing": "Large",
                    "facts": [
                        {
                            "title": "Submetido por",
                            "value": "**${committer_name}**\n\n ${committer_email} "
                        },
                        {
                            "title": "Enviado em",
                            "value": "${formatDateTime(created_at, 'dd-MM-yyyy')}"
                        },
                        {
                            "title": "Status",
                            "value": "Pendente"
                        }
                    ]
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Aprovar",
                    "data": {
                        "msteams": {
                            "type": "messageBack",
                            "text": "{\"action\": \"play\"}",
                            "value": "{\"project\": \"${project}\",\"ref\": \"${ref}\",\"project_id\": \"${project_id}\",\"job_id\": \"${job_id}\"}"
                        }
                    }
                },
                {
                    "type": "Action.ShowCard",
                    "title": "Rejeitar",
                    "style": "destructive",
                    "card": {
                        "type": "AdaptiveCard",
                        "body": [
                            {
                                "type": "Input.Text",
                                "id": "RejectCommentID",
                                "placeholder": "Por favor especifique um motivo para a rejeição.",
                                "isMultiline": true
                            }
                        ],
                        "actions": [
                            {
                                "type": "Action.Submit",
                                "title": "Enviar",
                                "data": {
                                    "msteams": {
                                        "type": "messageBack",
                                        "text": "{\"action\": \"cancel\"}",
                                        "value": "{\"project\": \"${project}\",\"ref\": \"${ref}\",\"project_id\": \"${project_id}\",\"job_id\": \"${job_id}\"}"
                                    }
                                }
                            }
                        ],
                        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
                    }
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2",
    "fallbackText": "This card requires Adaptive Cards v1.2 support to be rendered properly."
}